<Window x:Class="StudentGradCertifier.UserWindows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentGradCertifier.UserWindows"
        mc:Ignorable="d" FontSize="20" FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        Title="AddUserWindow" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                   FontSize="32" Margin="5" Padding="5"
                   TextAlignment="Center"
                   TextDecorations="Underline">
            Add User
        </TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="1"
                   Margin="5" Padding="5"
                   HorizontalAlignment="Right">
            Username:
        </TextBlock>
        <TextBox Grid.Row="1" Grid.Column="2"
                 Margin="5" Padding="5"
                 x:Name="UsernameTxt"
                 Width="250"/>

        <Button Grid.Row="4" Grid.Column="2"
                Margin="5" Padding="5"
                x:Name="SaveBtn"
                Click="SaveBtn_OnClick">
            Save User
        </Button>
    </Grid>
</Window>
