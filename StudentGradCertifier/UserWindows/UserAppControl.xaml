<Window x:Class="StudentGradCertifier.UserWindows.UserAppControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentGradCertifier.UserWindows"
        xmlns:helper="clr-namespace:StudentGradCertifier.Helpers"
        mc:Ignorable="d" FontSize="20" FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen"
        Title="Users Control" Height="850" Width="1250"
        Closed="UserAppControl_OnClosed">
    <Window.Resources>
        <helper:BoolToActionTextConverter x:Key="BoolToActionTextConverter"/>
        <helper:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                   Text="User Control" Margin="5" Padding="5"
                   HorizontalAlignment="Center" FontSize="32" />

        <TextBox Grid.Row="1" Grid.Column="1"
                 Margin="5" Padding="5"
                 HorizontalAlignment="Right"
                 x:Name="SearchTxt"
                 MinWidth="250"/>
        <Button Grid.Row="1" Grid.Column="2"
                Margin="5" Padding="5"
                HorizontalAlignment="Left"
                x:Name="SearchUserBtn"
                Click="SearchUserBtn_OnClick">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Search" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Image Source="/Assets/search.png" Width="20" Height="20" />
            </StackPanel>
        </Button>

        <DataGrid x:Name="DgUsers"
          Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
          CanUserAddRows="False"
          AutoGenerateColumns="False"
          IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusTextConverter}}" 
                                   VerticalAlignment="Center" Margin="3 0 0 0" />
                                <TextBlock Margin="5 0"></TextBlock>

                                <Button Content="{Binding IsActive, Converter={StaticResource BoolToActionTextConverter}}"
                                Padding="5,2"
                                x:Name="ToggleUserStatusBtn"
                                Click="ToggleUserStatusBtn_OnClick"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="PowerCampusId" Binding="{Binding PowerCampusId}"></DataGridTextColumn>
                <DataGridTextColumn Header="Created By" Binding="{Binding CreatedBy}"></DataGridTextColumn>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}"></DataGridTextColumn>
                <DataGridTextColumn Header="Updated By" Binding="{Binding UpdatedBy}"></DataGridTextColumn>
                <DataGridTextColumn Header="Updated Date" Binding="{Binding UpdatedDate}"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>

        <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
        Margin="5" Padding="5"
        MaxWidth="200"
        x:Name="AddUserBtn"
        Click="AddUserBtn_OnClick">
            Add User
        </Button>
    </Grid>
</Window>
